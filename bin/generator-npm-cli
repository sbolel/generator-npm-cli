#!/usr/bin/env node

var argv = require('optimist')
              .alias('h', 'help')
              .argv,
    prompt = require('prompt'),
    app = require('./../lib/app'),
    help = require('./../lib/help'),
    index = require('./../lib/index');

prompt.override = argv;
prompt.message = '';
prompt.delimiter = '';
prompt.colors = false;

if (argv._.length === 0) {

  if (argv.version) {
    help.showVersion();
  } else {
    help.showHelp();
  }

} else {
  if (
    argv.h ||
    argv.hel ||
    argv.hep ||
    argv.hepl ||
    argv.help
  ) {

    help.showHelp(argv._[0]);

  } else {
    switch (argv._[0]) {

      case 'init':
      case 'initialise':
      case 'initialize':
        app.init(argv);
        break;

      case 'h':
      case 'hel':
      case 'hep':
      case 'hepl':
      case 'help':
        help.showHelp();
        break;

      case '-v':
      case 'v':
      case 'ver':
      case 'version':
      case '--version':
        help.showVersion();
        break;

      default:
        console.log('\n' +
          'Command not found. Use `generator-package --help` for a list of commands or\n' +
          '`generator-package <command> --help` for more details\n');
    }
  }
}
